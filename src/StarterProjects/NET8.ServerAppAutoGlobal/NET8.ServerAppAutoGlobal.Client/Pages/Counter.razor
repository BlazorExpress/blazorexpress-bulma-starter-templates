@page "/counter"

<PageTitle>Counter</PageTitle>

<h1 class="title is-1">Counter</h1>

<Block role="status">Current count: @currentCount</Block>

<Button Color="ButtonColor.Primary" @onclick="IncrementCount">Click me</Button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
